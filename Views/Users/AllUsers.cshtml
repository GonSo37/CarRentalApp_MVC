@using CarRentalApp_MVC.ViewModels
@model IEnumerable<UserWithRolesViewModel>

<div id="wrapper">
    @Html.Partial("_AdminSidebar")
    <div class="adminpanel-padding">
        <h2>List of Users</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>UserName</th>
                    <th>Roles</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.UserName</td>
                        <td>@string.Join(", ", user.Role)</td>
                        <td>
                            <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

