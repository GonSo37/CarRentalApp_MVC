@model CarRentalApp_MVC.Models.Client
@{
	ViewData["Title"] = "Edit";
}

<div class="row">
	<div class="col-md-4">
		<form asp-action="EditClient" method="post">
			@Html.AntiForgeryToken()
			<input type="hidden" asp-for="ClientId" />

			<div class="form-group">
				<label class="control-label">First Name</label>
				<input asp-for="FirstName" class="form-label" />
			</div>
			<div class="form-group">
				<label class="control-label">Last Name</label>
				<input asp-for="LastName" class="form-label" />
			</div>
			<div class="form-group">
				<label class="control-label">Drivers License Number</label>
				<input asp-for="DriversLicenseNumber" class="form-label" />
			</div>
			<div class="form-group">
				<label class="control-label">Phone Number</label>
				<input asp-for="PhoneNumber" class="form-label" />
			</div>
			<div class="form-group">
				<label class="control-label">Email</label>
				<input asp-for="Email" class="form-label" />
			</div>
			<div class="form-group">
				<label class="control-label">Status</label>
				<input asp-for="Status" class="form-label" />
			</div>
			<div class="form-group">
				<input class="btn btn-primary" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>