@model CarRentalApp_MVC.ViewModels.RentalViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRental" method="post">
            @Html.AntiForgeryToken()


            <div class="form-group">
                <label class="control-label">CarID</label>
                <input asp-for="CarId" class="form-label" />
            </div>

            <div class="form-group">
                <label class="control-label">ClientId</label>
                <input asp-for="ClientId" class="form-label" />
            </div>

            <div class="form-group">
                <label class="control-label">Start Date</label>
                <input asp-for="StartDate" class="form-label" type="date" />
            </div>

            <div class="form-group">
                <label class="control-label">End Date</label>
                <input asp-for="EndDate" class="form-label" type="date" />
            </div>

            <div class="form-group">
                <label class="control-label">Total Cost</label>
                <input asp-for="TotalCost" class="form-label" type="number" step="0.01" />
            </div>

            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>