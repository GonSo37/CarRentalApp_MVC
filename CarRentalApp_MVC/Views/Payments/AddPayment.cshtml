@using static CarRentalApp_MVC.Models.Payment
@model CarRentalApp_MVC.ViewModels.PaymentViewModel
@{
    ViewData["Title"] = "Create Payment";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPayment" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="control-label">Rental ID</label>
                <input asp-for="RentalId" class="form-label" />
            </div>
            <span asp-validation-for="RentalId" class="text-danger"></span>

            <div class="form-group" style="margin-top:12px;">
                <label class="control-label">Amount</label>
                <input asp-for="Amount" class="form-label" type="number" step="0.01" />
            </div>
            <span asp-validation-for="Amount" class="text-danger"></span>

            <div class="form-group" style="margin-top:12px;">
                <label class="control-label">Payment Date</label>
                <input asp-for="PaymentDate" class="form-label" type="date" />
            </div>
            <span asp-validation-for="PaymentDate" class="text-danger"></span>

            <div class="form-group" style="margin-top:12px;">
                <label class="control-label">Payment Method</label>
                <select asp-for="PayMethod" asp-items="Html.GetEnumSelectList<PaymentMethod>()" class="form-label"></select>

            </div>
         

            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>
